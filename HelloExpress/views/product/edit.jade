doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
  h1 #{title}
  p Node.js Programming for Modern Web Development
  hr
  form(method='post')
    fieldset
      legend Edit Data
      table
        tr
          td
            label ID
          td
            input(type='text', name='id' value=data.id, disabled)            
        tr
          td
            label Name
          td
            input(type='text', name='name' value=data.name)
        tr
          td
            label Model Number
          td
            input(type='text', name='modelnumber', value=data.modelnumber)
        tr
          td
            label Series
          td
            input(type='text', name='series', value=data.series)
      input(type='submit')
    