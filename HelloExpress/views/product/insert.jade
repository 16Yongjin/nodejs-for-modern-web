doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
  h1 #{title}
  p Node.js Programming for Modern Web Development
  hr
  form(method='post')
    fieldset
      legend Insert Data
      table
        tr
          td
            label Name
          td
            input(type='text', name='name')
        tr
          td
            label Model Number
          td
            input(type='text', name='modelnumber')
        tr
          td
            label Series
          td
            input(type='text', name='series')
      input(type='submit')
    
